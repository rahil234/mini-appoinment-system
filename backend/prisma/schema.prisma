generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

enum CaseStatus {
  OPEN
  ASSIGNED
  CLOSED
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  role     Role   @default(USER)

  appointments Appointment[]
  cases        Case[]        @relation("AssignedCases")

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email, isDeleted])
}

model Appointment {
  id     String            @id @default(uuid())
  title  String
  date   DateTime
  status AppointmentStatus @default(PENDING)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, isDeleted])
  @@index([userId, status, isDeleted])
  @@index([date, isDeleted])
}

model Case {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      CaseStatus @default(OPEN)

  assignedUserId String?
  assignedUser   User?   @relation("AssignedCases", fields: [assignedUserId], references: [id])

  isDeleted Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([assignedUserId, isDeleted])
  @@index([assignedUserId, status, isDeleted])
}
